<div class="row">
  <div id="contactSection" class="post">

    <div class="contact">
      <svg viewBox="0 0 600 300">
        <!-- Symbol-->
        <symbol id="s-text">
          <text text-anchor="middle" x="50%" y="15%" dy=".30em">Contact Me</text>
        </symbol>
        <!-- Duplicate symbols-->
        <use class="text" xlink:href="#s-text"></use>
        <use class="text" xlink:href="#s-text"></use>
        <use class="text" xlink:href="#s-text"></use>
        <use class="text" xlink:href="#s-text"></use>
        <use class="text" xlink:href="#s-text"></use>
      </svg>
      <br>
      <br>
      <div class="envelope">
        <div class="top">
          <div class="outer">
            <div class="inner"></div>
          </div>
        </div>
        <div class="bottom"></div>
        <div class="left"></div>
        <div class="right"></div>
        <div class="cover"></div>
        <div class="paper">
          <a class="call" href="tel:065 865 2825" disabled>
            <div class="i"></div>065 865 2825
          </a>
          <a class="mail" href="mailto:nondumisogodlo@gmail.com">
            <div class="i"></div>nondumisogodlo@gmail.com
          </a>
        </div>
      </div>
    </div>
    <form action="/contact" method="post">
      <input class="formInput" type="text" name="name" placeholder="Full Name">
      <br>
      <textarea placeholder="Your Message Here ..." name="message" id="source" contenteditable=""></textarea>
      <input class="button" type="submit" name="" value="Send">
    </form>

  </div>
</div>
<script type="text/javascript">
  $('input[type="button"]').click(function(e) {
    $('input[type="text"]').val($('#source').html());
  });
</script>
